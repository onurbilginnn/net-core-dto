@model mizgindogancom.ViewModels.HomeViewModel;

<div class="rs-free-consultation long-gap-home bg3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pr-30">
                <div class="banner-form banner-form-home mt-100">
                    <div class="sec-title">
                        <h2 class="title">AVUKATA SOR</h2>
                        <p>Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                    </div>
                    <div class="contact-form">
                        <div id="form-messages">@Model.MailSentMsg</div>
                        <div id="blog-loading-container">
                            <div id="send-mail-loading">
                                @*<img src="@Model.AllImages.ElementAt(9).Url" alt="@Model.AllImages.ElementAt(9).Name" />*@
                            </div>
                        </div>
                            <form id="contact-form" method="post">
                                <div class="row">
                                    <div class="col-md-4 col-sm-12">
                                        <div class="form-field">
                                            <input type="text" placeholder="İsim*" id="Name" name="Name">
                                        </div>
                                        <div class="form-field">
                                            <input type="email" placeholder="E-Mail*" id="Mail" name="Mail">
                                        </div>
                                        <div class="form-field">
                                            <input type="text" placeholder="Telefon Numarası" id="PhoneNo" name="PhoneNo">
                                        </div>
                                    </div>
                                    <div class="col-md-8 col-sm-12">
                                        <div class="form-field message-box">
                                            <textarea placeholder="Mesajınız*" rows="7" id="Message" name="Message"></textarea>
                                        </div>
                                        <div class="form-button">
                                            <button type="submit" class="readon">Gönder</button>
                                        </div>
                                        <div class="form-check mt-20">
                                            <input class="form-check-input" type="checkbox" value="" id="checkbox1" name="checkbox1">
                                            <label class="form-check-label" for="checkbox1" id="checkbox1Label" name="checkbox1Label">
                                                &nbsp;<a asp-action="Privacy" target="_blank" rel="noreferrer"><strong>Gizlilik politikası sözleşmesini</strong></a> kabul ediyorum.
                                            </label>
                                        </div>
                                    </div>


                                </div>
                            </form>
                        </div>
                    </div>
            </div>
          
        </div>
    </div>
</div>